:ruby
  new_user = User.new

%input#login-modal.modal-toggle{:type => "checkbox"}/
%label.modal.cursor-pointer{:for => "login-modal"}
  %label.modal-box.relative.relative.flex.flex-col.gap-3.items-center{:for => ""}
    %h2.text-2xl Log in
    = form_for(:user, url: session_path(:user), html: { class: 'flex flex-col space-y-2' }) do |f|
      .field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class: 'input input-bordered w-full max-w-xs'
      .field
        = f.label :password
        %br/
        = f.password_field :password, autocomplete: "current-password", class: 'input input-bordered w-full max-w-xs'
      - if Devise.mappings[:user].rememberable?
        .field
          = f.check_box :remember_me, class: 'checkbox'
          = f.label :remember_me, class: 'label-text'
      .actions
        = f.submit "Log in", class: 'btn btn-primary'
      %ul
        %li
          = link_to("Sign up", new_registration_path(:user))
        %li
          = link_to("Forgot your password?", new_password_path(:user))
