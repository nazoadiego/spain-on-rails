.navbar.bg-base-200.justify-between.align-middle
  .flex-1
    = link_to('Spain On Rails', root_path, class: "btn btn-ghost normal-case text-xl")

  .flex-none
    - # Search Bar
    .form-control
      %input.input.input-bordered{:placeholder => "Search", :type => "text"}
    - # Signed in actions
    - if signed_in?
      .dropdown.dropdown-end
        %label.btn.btn-ghost.btn-circle.avatar{:tabindex => "0"}
          .w-24.mask.mask-squircle
            %img{:src => @avatar_url }
        %ul.mt-3.p-2.shadow.menu.menu-compact.dropdown-content.bg-base-100.rounded-box.w-52{:tabindex => "0"}
          %li
            %a.justify-between
              Profile
              %span.badge
                New
          %li
            %a
              Settings
          %li
            = link_to("Log Out", destroy_user_session_path, data: { "turbo-method": :delete } )
    - else
      - # Logged out actions
      %ul.flex
        %li
          %label.btn{:for => "login-modal"}
            Login
        %li
          %label.btn.btn-error{:for => "sign-up-modal"}
            Sign Up
